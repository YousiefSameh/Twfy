{
  "name": "twfy",
  "version": "0.1.0",
  "description": "Convert Tailwind v3 config to CSS-first tokens for Tailwind v4 workflow",
  "keywords": [
    "tailwind",
    "css",
    "tokens",
    "migration",
    "css-variables"
  ],
  "author": "Yousief",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yousiefsameh/twfy.git"
  },
  "main": "dist/index.js",
  "bin": {
    "twfy": "./bin/twfy.js"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc --project tsconfig.cli.json",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.cli.json --noEmit",
    "cli:dev": "tsx src/cli/index.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "postcss-nested": "^6.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
