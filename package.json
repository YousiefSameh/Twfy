{
  "name": "twfy",
  "version": "0.1.1",
  "description": "A CLI tool to convert Tailwind v3 config files into CSS-first tokens compatible with Tailwind v4's new CSS-first approach.",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "tokens",
    "design-tokens",
    "migration",
    "css-variables",
    "tailwind-v4",
    "cli"
  ],
  "author": "Yousief <yousief.sameh@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/YousiefSameh/Twfy#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/YousiefSameh/Twfy.git"
  },
  "bugs": {
    "url": "https://github.com/YousiefSameh/Twfy/issues"
  },
  "main": "./dist/index.js",
  "bin": {
    "twfy": "./bin/twfy.js"
  },
  "files": [
    "dist",
    "bin",
    "src/lib"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc --project tsconfig.cli.json",
    "prepublishOnly": "npm run build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit && tsc --project tsconfig.cli.json --noEmit",
    "cli:dev": "tsx src/cli/index.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0",
    "next": "^15.0.0",
    "postcss": "^8.5.6",
    "postcss-nested": "^6.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "tsx": "^4.5.0",
    "typescript": "^5.2.2",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
